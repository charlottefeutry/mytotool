{% extends 'base.html.twig' %}

{% block title%}Mytotool{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('style/style.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}


        <nav class="navbar navbar background-color">
            <a class="navbar-brand" href="{{  path('home') }}">
                <img src="{{ asset('assets/my-totool.svg') }}" width="60" height="60"
                     class="d-inline-block align-top" alt=""
            </a>
            <div class="col-2 btn-group">
                <button type="button" class="btn btn-background-color dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                    Mon compte
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Paramètres</a>
                    <a class="dropdown-item" href="#">Ajouter des membres</a>
                    <a class="dropdown-item" href="/logout">Déconnexion</a>
                    <div class="dropdown-divider"></div>
                </div>
            </div>

        </nav>
    </div>

    <div class="container-fluid">
        <div class="row ">
            <div class="col-3 col-3 background-color">

                <div class="row d-flex justify-content-center h2-color ">
                    <h2>To do list</h2>
                </div>

                <div>
                    <ul id="listMenu" class="list-group ">
                    {% for listeTaches in listes %}
                        <a href="{{ path('app_liste_list', {listId: listeTaches.id}) }}"><li class="list-group-item d-flex justify-content-between align-items-center list-group-item:last-child h2-color">{{ listeTaches.nom }}
                            <span class="badge rounded-pill"> 14</span></li></a>
                        <button type="submit" class="supprimerliste btn btn-background-color btn-width " data-listId="{{ listeTaches.id }}">Supprimer la liste</button>
                    {% endfor %}
                    </ul>
                </div>

                <!-- Button trigger modal -->
                <div class="d-flex justify-content-center">
                    <button type="button" class=" btn btn-background-color bouton-creer-compte:hover mg-t2 mg-b2 " data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Créer une liste
                    </button>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Créer la nouvelle liste</h5>
                                <button type="button" class="" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <input type="text" id="createList" name="nom" required placeholder="Nom de la tâche"
                                       minlength="4" maxlength="20" size="50">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn color-button-close" id="closeModal" data-bs-dismiss="modal">Annuler</button>
                                <button type="button" id="saveCreateList"  class="btn color-button-creer-liste">Créer liste</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>



            <div class="col-9 right-column">
                <div class="row d-flex justify-content-center mg-t2">
                    <div class="col-3 mg-l1">
                        <div class="card color-button-1 border-button border-color-button mt-5" style="max-width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title color-titre-1 text-align"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-brightness-high" viewBox="0 0 16 16">
                                        <path d="M8 11a3 3 0 1 1 0-6 3 3 0 0 1 0 6zm0 1a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0zm0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13zm8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5zM3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8zm10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0zm-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0zm9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707zM4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708z"/>
                                    </svg> <a href="/list/59" class="color-titre-today"> Aujourd'hui </a> </h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-3 offset-1">
                        <div class="card color-button-2 border-button border-color-button mt-5" style="max-width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title color-titre-2 text-align"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-plus" viewBox="0 0 16 16">
                                        <path d="M8 7a.5.5 0 0 1 .5.5V9H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V10H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7z"/>
                                        <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                                    </svg> <a href="/list/60" class="color-titre-2"> Prochainement </a> </h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-3 offset-1">
                        <div class="card color-button-3 border-button border-color-button mt-5" style="max-width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title color-titre-3 text-align"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2-circle" viewBox="0 0 16 16">
                                        <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z"/>
                                        <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z"/>
                                    </svg> <a href="/list/3" class="color-titre-3"> To do </a> </h5>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
{% endblock %}
